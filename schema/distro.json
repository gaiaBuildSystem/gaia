{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "The Distro Manifest Schema",
    "type": "object",
    "properties": {
        "name": {
            "description": "The name of the distro",
            "type": "string"
        },
        "machine": {
            "description": "The machine type",
            "type": "string",
            "enum": [
                "qemux86-64",
                "qemuarm64",
                "wsl-amd64",
                "wsl-arm64",
                "rpi4b",
                "rpi5b",
                "imx8mp-verdin",
                "imx93-frdm",
                "imx95-verdin-evk",
                "intel",
                "sl1680",
                "sl2619",
                "luna"
            ]
        },
        "version": {
            "type": "object",
            "properties": {
                "major": {
                    "type": "number"
                },
                "minor": {
                    "type": "number"
                },
                "patch": {
                    "type": "number"
                },
                "build": {
                    "type": "number"
                },
                "variant": {
                    "type": "string",
                    "enum": [
                        "ota",
                        "dev",
                        "prod"
                    ]
                },
                "codename": {
                    "type": "string"
                }
            },
            "required": [
                "major",
                "minor",
                "patch",
                "build"
            ]
        },
        "maxImgSize": {
            "type": "number"
        },
        "arch": {
            "type": "string",
            "enum": [
                "linux/amd64",
                "linux/arm64"
            ]
        },
        "searchForRecipesOn": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "excludeRecipes": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "includeRecipes": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "useInitramfs": {
            "type": "boolean",
            "default": true
        }
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "includeRecipes": {
                        "type": "array"
                    }
                },
                "required": [
                    "includeRecipes"
                ]
            },
            "then": {
                "not": {
                    "required": [
                        "excludeRecipes"
                    ]
                }
            },
            "else": {
                "if": {
                    "properties": {
                        "excludeRecipes": {
                            "type": "array"
                        }
                    },
                    "required": [
                        "excludeRecipes"
                    ]
                },
                "then": {
                    "not": {
                        "required": [
                            "includeRecipes"
                        ]
                    }
                }
            }
        },
        {
            "dependentSchemas": {
                "includeRecipes": {
                    "properties": {
                        "excludeRecipes": false
                    },
                    "errorMessage": "Cannot use 'includeRecipes' and 'excludeRecipes' together."
                },
                "excludeRecipes": {
                    "properties": {
                        "includeRecipes": false
                    },
                    "errorMessage": "Cannot use 'excludeRecipes' and 'includeRecipes' together."
                }
            }
        },
        {
            "oneOf": [
                {
                    "required": [
                        "includeRecipes"
                    ]
                },
                {
                    "required": [
                        "excludeRecipes"
                    ]
                }
            ]
        }
    ],
    "required": [
        "name",
        "machine",
        "version",
        "maxImgSize",
        "arch",
        "searchForRecipesOn"
    ]
}
