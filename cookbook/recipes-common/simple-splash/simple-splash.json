{
    "name": "simple-splash",
    "type": "init",
    "priority": 0,
    "support": [
        "linux/amd64",
        "linux/arm64"
    ],
    "hostAsContainer": true,
    "containerImage": {
        "image": "docker.io/pergamos/staticx",
        "tag": "bookworm",
        "extraConfig": "--privileged --pid=host --ipc=host --uts=host"
    },
    "hostDeps": [
        "procps",
        "systemd",
        "patchelf",
        "python3",
        "python3-pip",
        "scons",
        "fbset",
        "fbi"
    ],
    "targetDeps": [
        "fbset",
        "fbi"
    ],
    "afterDeployRecipes": [
        "config.ts"
    ],
    "initramfsRecipes": [
        "deployInit.sh"
    ]
}
